<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_purple"
        android:padding="16dp">

        <!-- Plan Title -->
        <TextView
            android:id="@+id/tv_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan Title"
            android:textSize="23sp"
            android:textColor="#703F67"
            android:textStyle="bold" />

        <!-- Plan Description -->
        <TextView
            android:id="@+id/tv_plan_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_plan_title"
            android:layout_marginTop="4dp"
            android:text="Plan Description"
            android:textSize="14sp"
            android:textColor="#703F67" />

        <!-- Plan Image -->
        <ImageView
            android:id="@+id/iv_plan_image"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_18" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
